#! /usr/bin/env bash

set -e

if [ -f auto/common ]; then
        . auto/common
fi

export GITHUB_RELEASE_PATH="$HOME/.go/bin/github-release"
export version=$(date +%Y%W)"$image_prename$customized$persist-$distro"

cd "./iso-$distro" || exit

pwd
ls

echo "computing sha256sum"
sha256sum "$image_prename$image_prename$customized$persist-$distro-amd64.hybrid.iso" > \
		"$image_prename$image_prename$customized$persist-$distro-amd64.hybrid.iso.sha256sum" || \
		rm "$image_prename$image_prename$customized$persist-$distro-amd64.hybrid.iso.sha256sum"

ls

echo "signing with $SIGNING_KEY"
gpg --batch --yes --clear-sign -u "$SIGNING_KEY" \
		"$image_prename$image_prename$customized$persist-$distro-amd64.hybrid.iso.sha256sum" || exit

ls
echo "creating torrent"
mktorrent -a "udp://tracker.openbittorrent.com:80" \
		-a "udp://tracker.publicbt.com:80" \
		-a "udp://tracker.istole.it:80" \
		-a "udp://tracker.btzoo.eu:80/announce" \
		-a "http://opensharing.org:2710/announce" \
		-a "udp://open.demonii.com:1337/announce" \
		-a "http://announce.torrentsmd.com:8080/announce.php" \
		-a "http://announce.torrentsmd.com:6969/announce" \
		-a "http://bt.careland.com.cn:6969/announce" \
		-a "http://i.bandito.org/announce" \
		-a "http://bttrack.9you.com/announce" \
		-w "https://github.com/eyedeekay/hoarderMediaOS/releases/download/$version/$image_prename$image_prename$customized$persist-$distro-amd64.hybrid.iso" \
		"$image_prename$image_prename$customized$persist-$distro-amd64.hybrid.iso" || exit



#"$GITHUB_RELEASE_PATH" delete \
#		--user eyedeekay \
#		--repo kloster \
#		--tag "$version" || true

"$GITHUB_RELEASE_PATH" release \
		--user eyedeekay \
		--repo hoarderMediaOS \
		--tag "$version" \
		--name "hoarderMediaOS" \
		--description "A re-buildable OS for self-hosting. Please use the torrent if possible" || exit

"$GITHUB_RELEASE_PATH" upload --user eyedeekay --repo hoarderMediaOS --tag "$version" \
	--name "$image_prename$image_prename$customized$persist-$distro-amd64.hybrid.iso.sha256sum" \
	--file "$image_prename$image_prename$customized$persist-$distro-amd64.hybrid.iso.sha256sum"; \
"$GITHUB_RELEASE_PATH" upload --user eyedeekay --repo hoarderMediaOS --tag "$version" \
	--name "$image_prename$image_prename$customized$persist-$distro-amd64.hybrid.iso.sha256sum.asc" \
	--file "$image_prename$image_prename$customized$persist-$distro-amd64.hybrid.iso.sha256sum.asc";\
"$GITHUB_RELEASE_PATH" upload --user eyedeekay --repo hoarderMediaOS --tag "$version" \
	--name "$image_prename$image_prename$customized$persist-$distro-amd64.hybrid.iso.torrent" \
	--file "$image_prename$image_prename$customized$persist-$distro-amd64.hybrid.iso.torrent";\
"$GITHUB_RELEASE_PATH" upload --user eyedeekay --repo hoarderMediaOS --tag "$version" \
	--name "$image_prename$image_prename$customized$persist-$distro-amd64.hybrid.iso" \
	--file "$image_prename$image_prename$customized$persist-$distro-amd64.hybrid.iso"; \
"$GITHUB_RELEASE_PATH" upload --user eyedeekay --repo hoarderMediaOS --tag "$version" \
        --name "$image_prename$image_prename$customized$persist-$distro-amd64.files" \
        --file "$image_prename$image_prename$customized$persist-$distro-amd64.files"; \
"$GITHUB_RELEASE_PATH" upload --user eyedeekay --repo hoarderMediaOS --tag "$version" \
        --name "$image_prename$image_prename$customized$persist-$distro-amd64.contents" \
        --file "$image_prename$image_prename$customized$persist-$distro-amd64.contents"; \
"$GITHUB_RELEASE_PATH" upload --user eyedeekay --repo hoarderMediaOS --tag "$version" \
        --name "$image_prename$image_prename$customized$persist-$distro-amd64.hybrid.iso.zsync" \
        --file "$image_prename$image_prename$customized$persist-$distro-amd64.hybrid.iso.zsync"; \
"$GITHUB_RELEASE_PATH" upload --user eyedeekay --repo hoarderMediaOS --tag "$version" \
        --name "$image_prename$image_prename$customized$persist-$distro-amd64.packages" \
        --file "$image_prename$image_prename$customized$persist-$distro-amd64.packages"
